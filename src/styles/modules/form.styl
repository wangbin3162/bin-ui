//form
.bin-form {
  .bin-form-item-label {
    text-align: right;
    vertical-align: middle;
    float: left;
    font-size: 12px;
    color: #515a6e;
    line-height: 1;
    padding: 12px 12px 10px 0;
    box-sizing: border-box;
  }
}

//item
.bin-form-item {
  margin-bottom: 22px;
  vertical-align: top;
  zoom: 1;
  &:after, &:before {
    content: "";
    display: table;
  }
}

.bin-form-item-required {
  .bin-form-item-label:before {
    content: "*";
    display: inline-block;
    margin-right: 4px;
    line-height: 1;
    font-family: SimSun;
    font-size: 12px;
    color: #ed4014;
  }
}
.bin-form-item-content {
  position: relative;
  line-height: 32px;
  font-size: 12px;
}

.bin-form-item-error .bin-input {
  border: 1px solid #ed4014;
  &:focus {
    outline: 0;
    box-shadow: 0 0 0 2px rgba(237, 64, 20, 0.2);
  }
}

.bin-form-item-error-tip {
  position: absolute;
  top: 100%;
  left: 0;
  line-height: 1;
  padding-top: 6px;
  color: #ed4014;
}

.bin-form-inline .bin-form-item {
  display: inline-block;
  margin-right: 10px;
  vertical-align: top;
}
.bin-form-label-left .bin-form-item-label {
  text-align: left;
}
.bin-form-label-top .bin-form-item-label {
  float: none;
  display: inline-block;
  padding: 0 0 10px;
}
