.bin-loading {
  color: #2d8cf0;
  vertical-align: middle;
  text-align: center;
}

.bin-loading-inner {
  font-size: 14px;
  .circular {
    height: 42px;
    width: 42px;
    animation: loading-rotate 2s linear infinite;
    .path {
      stroke-dasharray: 90, 150;
      stroke-dashoffset: 0;
      stroke-width: 2;
      stroke: #409eff;
      stroke-linecap: round;
      animation: loading-dash 1.5s ease-in-out infinite;
    }
  }
