$width-base = 56px;
$width-with-date-base = 72px;

.bin-time-picker {
  font-size: $base-font-size;
  &-header {
    height: 32px;
    line-height: 32px;
    text-align: center;
    border-bottom: $border-base;
  }
  &-cells {
    min-width: $width-base* 2;
    &-with-seconds {
      min-width: $width-base* 3;
    }

    &-list {
      width: $width-base;
      max-height: 144px;
      float: left;
      overflow: hidden;
      border-left: $border-base;
      position: relative;
      &:hover {
        overflow-y: auto;
      }

      &:first-child {
        border-left: none;
        border-radius: $border-base-radius 0 0 $border-base-radius;
      }
      &:last-child {
        border-radius: 0 $border-base-radius $border-base-radius 0;
      }
      ul {
        width: 100%;
        margin: 0;
        padding: 0 0 120px 0;
        list-style: none;
        li {
          width: 100%;
          height: 24px;
          line-height: 24px;
          margin: 0;
          padding: 0 0 0 16px;
          box-sizing: content-box;
          text-align: left;
          user-select: none;
          cursor: pointer;
          list-style: none;
          transition: background $animation-duration-base ease-in-out;
          color: $color-text-default;
        }
      }
    }
    &-cell {
      &:hover {
        background: $color-select-hover;
      }
      &-disabled {
        color: $btn-disable-color
        cursor: not-allowed;
        &:hover {
          color: $btn-disable-color
          background-color: #fff;
          cursor: not-allowed;
        }
      }
      &-selected, &-selected:hover {
        color: $color-text-primary !important;
        background: $color-primary-light5;
      }
      &-focused {
        background-color: tint($color-primary, 80%);
      }
    }
  }
  &-with-range {
    .bin-picker-panel {
      &-body {
        min-width: $width-base * 2 + 4px;
      }
      &-content {
        float: left;
        position: relative;

        &:after {
          content: '';
          display: block;
          width: 2px;
          position: absolute;
          top: 31px;
          bottom: 0;
          right: -2px;
          background: $border-color-base;
          z-index: 1;
        }

        &-right {
          float: right;
          &:after {
            right: auto;
            left: -2px;
          }
        }
      }
    }
    .bin-time-picker-cells {
      &-list {
        &:first-child {
          border-radius: 0;
        }
        &:last-child {
          border-radius: 0;
        }
      }
    }
  }
  &-with-range&-with-seconds {
    .bin-picker-panel {
      &-body {
        min-width: $width-base* 3 * 2 + 4px;
      }
    }
  }
}

.bin-picker-panel-content {
  .bin-picker-panel-content {
    .bin-time-picker {
      &-cells {
        min-width: $width-with-date-base* 3;
        &-with-seconds {
          min-width: $width-with-date-base* 3;
          .bin-time-picker-cells-list {
            width: $width-with-date-base
            ul {
              li {
                padding: 0 0 0 28px;
              }
            }
          }
        }
        &-list {
          width: $width-with-date-base* 3 * 0.5;
          max-height: 216px;
          &:first-child {
            border-radius: 0;
          }
          &:last-child {
            border-radius: 0;
          }
          ul {
            padding: 0 0 192px 0;
            li {
              padding: 0 0 0 46px;
            }
          }
        }
      }
    }
  }
}
