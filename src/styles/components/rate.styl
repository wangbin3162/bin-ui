.bin-rate {
  height: 20px;
  line-height: 1;
  outline: none;
}
.bin-rate__item {
  font-size: 0;
  vertical-align: middle;
}
.bin-rate__icon, .bin-rate__item {
  display: inline-block;
  position: relative;
}

.bin-rate__icon {
  font-size: 18px;
  margin-right: 6px;
  color: #c0c4cc;
  transition: $animation-duration-base;
}

.bin-rate__decimal, .bin-rate__icon .path2 {
  position: absolute;
  left: 0;
  top: 0;
}
.bin-rate__decimal {
  display: inline-block;
  overflow: hidden;
  font-size: 18px;
}
.bin-rate__text {
  font-size: 14px;
  vertical-align: middle;
}

