.bin-tabs-wrapper {
  position: relative;
  .nav-wrap {
    position: relative;
    z-index: 2;
    &.is-scrollable {
      padding: 0 20px;
      box-sizing: border-box;
      .nav-next, .nav-prev {
        position: absolute;
        cursor: pointer;
        line-height: 37px;
        font-size: $base-font-size;
        color: $color-text-default;
        z-index: 2000;
      }
      .nav-prev {
        left: 0;
      }
      .nav-next {
        right: 0;
      }
    }
  }
  .scroll-container {
    white-space: nowrap;
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
    .scroll-wrapper {
      position: absolute;
      transition: .3s;
    }
  }
  .nav-wrapper {
    height: 36px;
    .tab-item {
      display: inline-block;
      position: relative;
      cursor: pointer;
      color: $color-text-default;
      height: 36px;
      line-height: 36px;
      padding: 0 18px;
      font-size: $base-font-size;
      transition: .3s;
      .iconfont {
        position: relative;
        top: -1px;
        font-size: 16px;
        height: 16px;
        line-height: 16px;
        color: $color-text-default;
      }
      .icon-ios-close {
        width: 0;
        overflow: hidden;
        font-size: 16px;
        border-radius: 50%;
        text-align: center;
        height: 16px;
        line-height: 16px;
        color: $color-text-default;
        transition: all .3s cubic-bezier(.645, .045, .355, 1);
        &:before {
          display: inline-block;
        }
        &:hover {
          background-color: $color-text-secondary;
          color: $color-white;
        }
      }
      &:hover {
        color: $color-primary;
        .icon-ios-close {
          width: 16px;
          margin-left: 5px;
        }
      }
      &.active {
        &:hover {
          padding: 0 18px;
        }
        color: $color-primary;
        .icon-ios-close {
          width: 16px;
          margin-left: 5px;
        }
      }
      &.no-close:hover {
        padding: 0 18px;
      }
    }
    .tabs-active-bar {
      position: absolute;
      bottom: 0;
      left: 0;
      height: 2px;
      background-color: $color-primary;
      z-index: 10;
      transition: transform .3s cubic-bezier(.645, .045, .355, 1);
      list-style: none;
    }
  }
  .contextmenu {
    margin: 0;
    background: #fff;
    z-index: 9999;
    position: fixed;
    left: 0;
    top: 0;
    list-style-type: none;
    padding: 5px 0;
    border-radius: $border-base-radius;
    font-size: $base-font-size;
    font-weight: 400;
    color: $color-text-default;
    border: 1px solid #cfd7e5;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .1)
    li {
      margin: 0;
      padding: 9px 16px;
      cursor: pointer;
      line-height: 1.2em;
      color: $color-text-default;
      &:hover {
        background: $color-primary-light6;
        color: $color-primary;
      }
    }
  }
  &.default:after {
    content: '';
    position: absolute
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background-color: #e4e7ed;
    z-index: 1;
  }
  &.card {
    border-bottom: 1px solid #e4e7ed;
    .nav-wrapper {
      height: 37px;
      z-index: 1;
      bottom: -1px;
    }
    .tab-list {
      border: 1px solid #e4e7ed;
      border-bottom: none;
      border-radius: $border-base-radius $border-base-radius 0 0;
      box-sizing: border-box;
      overflow: hidden;
    }
    .tab-item {
      background: #fff;
      border-bottom: 1px solid #e4e7ed;
      border-left: 1px solid #e4e7ed;
      transition: color .3s cubic-bezier(.645, .045, .355, 1), padding .3s cubic-bezier(.645, .045, .355, 1);
      &:first-child {
        border-left: none;
      }
      &.active {
        border-bottom-color: #fff;
      }
    }
    &.closable .tab-item {
      &:hover {
        padding: 0 12px;
      }
      &.no-close:hover {
        padding: 0 18px;
      }
    }
  }
  &.tag {
    .scroll-wrapper {
      height: 32px;
    }
    .tab-item {
      background: #fff;
      height: 34px;
      line-height: 33px;
      border-radius: $border-base-radius;
      padding: 0 12px;
      border: 1px solid #e8eaec;
      margin-right: 10px;
      font-size: $base-font-size;
      &::before {
        content: '';
        background: #e1e1e1;
        display: inline-block;
        position: relative;
        top: 1px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin-right: 8px;
      }
      &.width-icon::before {
        display: none;
      }
      &.active {
        &:hover {
          padding: 0 12px;
        }
        &::before {
          background: $color-primary;
        }
        .custom-icon {
          color: $color-primary;
        }
      }
      &.no-close:hover {
        padding: 0 12px;
      }
    }
    .nav-wrap.is-scrollable {
      .nav-next, .nav-prev {
        line-height: 36px;
      }
    }
  }
}

